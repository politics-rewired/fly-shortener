app = "myorg-shortlinks"

kill_signal = "SIGINT"
kill_timeout = 5
processes = []

[build]
  image = "us-east4-docker.pkg.dev/assemble-services/apps/link-shortener:latest"

[env]

[experimental]
  auto_rollback = true
  private_network = true

[[services]]
  http_checks = []
  internal_port = 8080
  processes = ["app"]
  protocol = "tcp"
  script_checks = []
  [services.concurrency]
    hard_limit = 25
    soft_limit = 20
    type = "connections"

  [[services.ports]]
    handlers = ["http"]
    port = 80

  [[services.ports]]
    handlers = ["tls", "http"]
    port = 443

  [[services.tcp_checks]]
    grace_period = "1s"
    interval = "10s"
    restart_limit = 5
    timeout = "2s"
